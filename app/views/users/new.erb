<section id='sign_up' class="container-fluid col-sm-6 col-sm-offset-2">
  <div style='margin: 10px'>
    <h4 class='col-sm-offset-2'>Sign up to Chitter</h4>
    <form action='/users' method='post'>
      <input class='input_box col-sm-6 col-sm-offset-2' name='name' type='text' value='<%= @user.name %>' value placeholder="Name">
      <br>
      <input class='input_box col-sm-6 col-sm-offset-2' name='username' type='text' value='<%= @user.username %>' value placeholder="Username">
      <br>
      <input class='input_box col-sm-6 col-sm-offset-2' name='email' type='text'  value='<%= @user.email %>' value placeholder="Email">
      <br>
      <input class='input_box col-sm-6 col-sm-offset-2' type='password' name='password' value placeholder="Password">
      <br>
      <input class='input_box col-sm-6 col-sm-offset-2' name='password_confirmation' type='password' value placeholder="Password Confirmation">
      <br>
      <input id='sign_in_button' class='btn btn-primary col-sm-4 col-sm-offset-3' type='submit' value='Sign up'>
    </form>
  </div>
  <div id="sign_up_new" class="container-fluid col-sm-12">
    <p class='col-sm-offset-2'>Already a user? <a href='/sessions/new'>Log in here Â»</a><p>
  </div>
</section>
